<UserControl x:Class="Win_Design.Controls.Design_Controls.Design_Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Win_Design.Controls.Design_Controls"
             mc:Ignorable="d" Height="250" Width="320">
    <Grid>
        <Grid x:Name="Title_Grid" Height="32" VerticalAlignment="Top" Background="Black" d:LayoutOverrides="VerticalAlignment">
            <Label x:Name="Title_Label" Content="Main Window" VerticalContentAlignment="Center" Margin="10,0,5,0" Foreground="White" Background="Black" MouseUp="Label_MouseUp"/>
        </Grid>
        <Grid x:Name="Design_Grid" Background="Black" Margin="0,37,0,0"/>
    </Grid>
</UserControl>
